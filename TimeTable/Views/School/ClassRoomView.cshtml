@model List<TimeTable.Models.Classroom>
@{
    ViewBag.Title = "Аудитории";
}
<Content ID="Content2" ContentPlaceHolderID="MainContent" runat="server">

    <div class="row">
        <div class="col-md-12 main" data-bind="with: TableWidgetViewModel" id="secondRow">
            <div class="panel panel-default col-md-12">
                <div class="panel-heading">
                    <span class="panel-title"><strong> Аудитории</strong></span>
                </div>
                <p></p>
                <label>Добавить аудиторию:</label>
                <p></p>
                @using (Html.BeginForm("CreateOrUpdateClassroom", "ClassRoom", FormMethod.Post))
                {

                    <input style="height:33px" class="col-md-2" title="Наименование аудитории" name="Name"
                           id="Name" type="text" value="" data-val="true" data-val-required="Поле Наименование аудитории обязательно для заполнения." />


                    <button style="display: inline-block; margin-top: -1%; position: inherit; " id="Savebtn" name="Savebtn" class="btn btn-link btn-xs">
                        <span class="glyphicon glyphicon-check btn-lg">
                        </span>
                    </button>

                    <span class="field-validation-valid" style="color:red;" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                }


                <div class="panel-body form-horizontal">
                    <div class="ra-section k-grid k-widget" id="orders" data-role="grid">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="text-align: center">Аудитория</th>
                                    <th style="text-align: center">Действие</th>
                                </tr>
                            </thead>


                            @foreach (var ClassRoom in @Model)
                            {
                                <tr>
                                    <td style="text-align: center"><a href='@Url.Action("Edit", "ClassRoom",  new { id = ClassRoom.Id })'> @ClassRoom.Name</a></td>
                                    <td>
                                        @using (Html.BeginForm("DeleteClassroom", "ClassRoom", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-link btn-xs center-block" data-toggle='modal'><span class="glyphicon glyphicon-remove btn-lg" style="padding:0"> </span> </button>
                                            <input type="hidden" name="Id" value="@ClassRoom.Id" />
                                        }
                                    </td>
                                </tr>

                            }
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>


</Content>
