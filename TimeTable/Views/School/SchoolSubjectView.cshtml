@model TimeTable.ViewModel.SchoolSubjectListViewModel
@{
    ViewBag.Title = "Предметы";
}
<Content ID="Content2" ContentPlaceHolderID="MainContent" runat="server">

    <div class="row">
        <div class="col-md-12 main" data-bind="with: TableWidgetViewModel" id="secondRow">
            <div class="panel panel-default col-md-12">
                <div class="panel-heading">
                    <span class="panel-title"><strong> Список предметов</strong></span>
                </div>

                <div style="padding-top:25px">
                    <label>Добавить предмет:</label>
                    <p></p>
                    @using (Html.BeginForm("CreateOrUpdate", "SchoolSubject", FormMethod.Post))
                    {

                        <input   style="height:33px" class="col-md-2" title="Наименование предмета" name="Name" 
                               id="Name" type="text" value="" data-val="true" data-val-required="Поле Наименование предмета обязательно для заполнения." />


                        <select  disabled="@(Model.Teachers.Count == 0)" title="Список учителей" style="display: inline-block;margin-left:20px" class="form-control col-md-2" id="selectTeacher" name="teacherId">
                            @if (Model.Teachers.Count != 0)
                            {
                                <option value=""></option>
                                foreach (var teachers in Model.Teachers)
                                {
                                    <option value="@teachers.Id">@teachers.SurName @teachers.Name @teachers.Patronymic</option>
                                }

                            }
                            else
                            {
                                <option>Учителя отсутсвуют </option>
                            }
                        </select>

                        <button style="display: inline-block; margin-top: -1%; position: inherit; " id="Savebtn" name="Savebtn" class="btn btn-link btn-xs">
                            <span class="glyphicon glyphicon-check btn-lg">
                            </span>
                        </button>

                        <span class="field-validation-valid" style="color:red;" data-valmsg-for="Name" data-valmsg-replace="true"></span>

                    }

                </div>
                <div class="panel-body form-horizontal">
                    <div class="ra-section k-grid k-widget" id="orders" data-role="grid">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="text-align: center">Наименование предмета</th>
                                    <th style="text-align: center">Преподаватель</th>
                                </tr>
                            </thead>


                            @foreach (var SchoolSubject in @Model.SchoolSubjects)
                            {


                                <tr>
                                    <td style="text-align: center"><a href='@Url.Action("Edit", "SchoolSubject",  new { id = @SchoolSubject.Id })'> @SchoolSubject.Name</a></td>
                                    <td style="text-align: center"> @SchoolSubject.TeacherName</td>
                                    <td>
                                        @using (Html.BeginForm("Delete", "SchoolSubject", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-link btn-xs center-block" data-toggle='modal'><span class="glyphicon glyphicon-remove btn-lg" style="padding:0"> </span> </button>
                                            <input type="hidden" name="Id" value="@SchoolSubject.Id" />
                                        }
                                </tr>

                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</Content>
